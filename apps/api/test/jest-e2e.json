{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e.spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@api/(.*)$": "<rootDir>/../src/$1",
        "^@repo/shared$": "<rootDir>/../../packages/shared/src"
    },
    "setupFilesAfterEnv": ["<rootDir>/setup-e2e.ts"],
    "testTimeout": 30000
}
